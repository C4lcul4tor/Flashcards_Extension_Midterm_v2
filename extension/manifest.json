{
    "manifest_version": 3,
    "name": "Flashcard Creator",
    "version": "1.0",
    "description": "Highlight text to create flashcards with ease.",
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  